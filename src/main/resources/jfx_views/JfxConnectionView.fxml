<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tschanz.geobooster.presentation_jfx.viewcontroller.JfxConnectionViewController">
    <VBox spacing="5">
        <HBox spacing="5">
            <ChoiceBox fx:id="connectionChoiceBox" onAction="#onConnectionSelected" />
            <Button fx:id="loadDrButton" disable="true" mnemonicParsing="false" onAction="#onLoadDrButtonClicked" text="Load DR..."/>
        </HBox>
        <CheckBox fx:id="trackChangesCheckBox" onAction="#onCheckForChangesClicked" text="track changes" selected="true" />
    </VBox>
</AnchorPane>
